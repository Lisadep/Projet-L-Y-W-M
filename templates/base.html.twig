{# Header #}

<header class="headertop d-flex justify-content-between p-y-4 ">
    <div>
        <img class="logo" src="{{ asset('images/Logo-blanc.png') }}" alt="logo"></div>
    <div>
        <nav class="mt-4">
            <a type="button" class="btn btn-outline-dark" href="">Nos séjours</a>
            <a type="button" class="btn btn-outline-dark" href="">Nos formules</a>
            <a type="button" class="btn btn-outline-primary" href="{{ path ('app_login') }}">Connexion</a>
            <a type="button" class="btn btn-outline-primary" href="{{ path ('app_register') }}">Inscription</a>
            <a type="button" class="btn btn-outline-primary" href="{{ path ('admin') }}">Back office</a>
            <a type="button" class="btn btn-outline-danger" href=""><i class="fa-solid fa-cart-shopping"></i>Panier</a><i class="fa-solid fa-cart-shopping"></i>
        </nav>
    </div>
</header>

{% block body %} {# Page à afficher #} {% endblock %}

